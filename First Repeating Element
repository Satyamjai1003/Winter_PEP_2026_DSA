class Solution {
  public:
    int firstRepeated(vector<int> &arr) {
        // code here
        int n=arr.size();
        int i,j;
        for(i=0;i<n;i++)
        {
            int target =arr[i];
            for(j=i+1;j<n;j++)
            {
                if(arr[j]==target)
                {
                    return i+1;
                }
            }
        }
        return -1;
    }
};
